  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  
  <!-- Toast notifications for better UX -->
  <div class="toast-container position-fixed bottom-0 right-0 p-3" style="z-index: 1050;">
    <div id="notification-toast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="toast-header">
        <i class="fas fa-bell text-primary"></i>
        <strong class="mr-auto">FindMrWhite</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="toast-body"></div>
    </div>
  </div>

  <script>
    // Toast notification function
    function showToast(message, type = 'info') {
      const toast = $('#notification-toast');
      const toastBody = toast.find('.toast-body');
      const toastIcon = toast.find('.toast-header i');
      
      // Set message
      toastBody.text(message);
      
      // Set icon based on type
      toastIcon.removeClass().addClass('fas');
      switch(type) {
        case 'success':
          toastIcon.addClass('fa-check-circle text-success');
          break;
        case 'error':
          toastIcon.addClass('fa-exclamation-circle text-danger');
          break;
        case 'warning':
          toastIcon.addClass('fa-exclamation-triangle text-warning');
          break;
        default:
          toastIcon.addClass('fa-bell text-primary');
      }
      
      // Show toast
      toast.toast('show');
    }
    
    // Auto-hide alerts after 5 seconds
    $(document).ready(function() {
      $('.alert').delay(5000).fadeOut();
    });
  </script>
