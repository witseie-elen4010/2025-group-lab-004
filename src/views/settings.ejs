<% layout('home_layout.ejs') %>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card mb-4">
      <div class="card-header">
        <h2 class="mb-0"><i class="fas fa-cog"></i> Account Settings</h2>
      </div>
      <div class="card-body">
        <% if (typeof message !== 'undefined' && message) { %>
          <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> <%= message %>
          </div>
        <% } %>
        
        <div class="row">
          <div class="col-md-6">
            <h4><i class="fas fa-user"></i> Profile Settings</h4>
            <div class="form-group">
              <label>Username</label>
              <input type="text" class="form-control" value="<%= typeof username !== 'undefined' ? username : 'Guest' %>" readonly>
              <small class="form-text text-muted">Username cannot be changed</small>
            </div>
            
            <div class="form-group">
              <label>Email</label>
              <input type="email" class="form-control" placeholder="Coming soon..." readonly>
              <small class="form-text text-muted">Email updates will be available soon</small>
            </div>
            
            <div class="form-group">
              <label>Password</label>
              <button class="btn btn-outline-primary btn-sm" disabled>
                <i class="fas fa-key"></i> Change Password
              </button>
              <small class="form-text text-muted">Password changes coming soon</small>
            </div>
          </div>
          
          <div class="col-md-6">
            <h4><i class="fas fa-gamepad"></i> Game Preferences</h4>
            <div class="form-group">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="soundEffects" disabled>
                <label class="form-check-label" for="soundEffects">
                  Sound Effects
                </label>
              </div>
            </div>
            
            <div class="form-group">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="notifications" disabled>
                <label class="form-check-label" for="notifications">
                  Game Notifications
                </label>
              </div>
            </div>
            
            <div class="form-group">
              <label>Theme</label>
              <select class="form-control" disabled>
                <option>Light Theme</option>
                <option>Dark Theme</option>
              </select>
              <small class="form-text text-muted">Theme selection coming soon</small>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="card mb-4">
      <div class="card-header">
        <h3 class="mb-0"><i class="fas fa-chart-line"></i> Quick Stats</h3>
      </div>
      <div class="card-body">
        <div class="row text-center">
          <div class="col-md-3">
            <h4 class="text-primary">0</h4>
            <small>Games Today</small>
          </div>
          <div class="col-md-3">
            <h4 class="text-success">0</h4>
            <small>Win Streak</small>
          </div>
          <div class="col-md-3">
            <h4 class="text-info">0</h4>
            <small>Friends Online</small>
          </div>
          <div class="col-md-3">
            <h4 class="text-warning">Member</h4>
            <small>Account Type</small>
          </div>
        </div>
      </div>
    </div>
    
    <div class="card">
      <div class="card-header">
        <h3 class="mb-0"><i class="fas fa-shield-alt"></i> Privacy & Security</h3>
      </div>
      <div class="card-body">
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="publicProfile" disabled>
            <label class="form-check-label" for="publicProfile">
              Make my profile public on leaderboard
            </label>
          </div>
        </div>
        
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gameInvites" disabled>
            <label class="form-check-label" for="gameInvites">
              Allow game invites from anyone
            </label>
          </div>
        </div>
        
        <hr>
        
        <div class="text-center">
          <button class="btn btn-outline-danger" disabled>
            <i class="fas fa-trash-alt"></i> Delete Account
          </button>
          <small class="form-text text-muted">Account deletion will be available in future updates</small>
        </div>
      </div>
    </div>
    
    <div class="text-center mt-4">
      <a href="/dashboard" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
      </a>
    </div>
  </div>
</div>

<style>
.card {
  transition: transform 0.2s ease;
}

.card:hover {
  transform: translateY(-2px);
}

.form-control:disabled, .btn:disabled {
  cursor: not-allowed;
}

.text-center h4 {
  font-weight: bold;
  margin-bottom: 5px;
}

.text-center small {
  color: #6c757d;
  text-transform: uppercase;
  font-weight: 500;
  letter-spacing: 0.5px;
}
</style>