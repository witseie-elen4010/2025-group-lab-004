<!DOCTYPE html>
<html>
  <head>
  <link rel="stylesheet" href="/css/word-description.css">
</head>
<body>
  <h1>Welcome <%= playerName %></h1>
  <h2>Your word: <%= word %></h2>

  <div id="turnStatus"></div>

  <form action="/submit-description" method="POST">
  <input type="hidden" name="gameId" value="<%= gameId %>">
  <input type="hidden" name="playerName" value="<%= playerName %>">
  <textarea name="description" placeholder="Enter your description..." required></textarea>
  <button type="submit">Submit</button>
  </form>

  <script>
    const socket = io();
    const gameId = "<%= gameId %>";
    const playerName = "<%= playerName %>";

    socket.emit("joinGame", { gameId, playerName });

    function submitClue() {
      const clue = document.getElementById("clue").value;
      socket.emit("submitClue", { gameId, clue });
      document.getElementById("clueInput").style.display = "none";
    }

    socket.on("gameUpdate", (game) => {
      const clues = game.clues.map(c => `<li><strong>${c.playerName}</strong>: ${c.text}</li>`).join('');
      document.getElementById("clueList").innerHTML = clues;
    });

    socket.on("nextTurn", (player) => {
      const isMyTurn = socket.id === player.id;
      document.getElementById("turnStatus").innerText = isMyTurn ? "Your Turn!" : `${player.name}'s turn`;
      document.getElementById("clueInput").style.display = isMyTurn ? "block" : "none";
    });

    socket.on("phaseChange", (phase) => {
    if (phase === "voting") {
      alert("All players have submitted clues. Moving to voting phase.");
      window.location.href = `/vote/${gameId}?playerName=${playerName}`;
    }
  });
  </script>
</body>
</html>
