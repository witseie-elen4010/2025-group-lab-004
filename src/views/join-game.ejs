<%- layout('layout') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3 class="text-center">Join a Game</h3>
        </div>
        <div class="card-body">
          <form action="/join" method="POST">
            <div class="form-group">
              <label for="code">Enter a 6-digit Game Code:</label>
              <input type="text" class="form-control" id="code" name="code" maxlength="6" pattern="[0-9]{6}" placeholder="e.g. 123456" required>
              <small class="form-text text-muted">Ask your friend for their game code</small>
            </div>
            <button type="submit" class="btn btn-success btn-block mt-3">Join Game</button>
          </form>
          
          <% if (typeof message !== 'undefined' && message) { %>
            <div class="alert alert-danger mt-3">
              <%= message %>
            </div>
          <% } %>
          
          <div class="mt-3 text-center">
            <a href="/dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>